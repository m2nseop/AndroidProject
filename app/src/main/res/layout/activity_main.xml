<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="100">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:layout_margin="10dp"
        android:background="@drawable/background"
        android:id="@+id/scroll_view"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#162CA3"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="#FF9800"
            android:id="@+id/result_text_view"/>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_margin="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:textSize="65sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/ball"
            android:layout_margin="5dp"
            android:id="@+id/input_text_view_0"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:textSize="65sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/ball"
            android:layout_margin="5dp"
            android:id="@+id/input_text_view_1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:textSize="65sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/ball"
            android:layout_margin="5dp"
            android:id="@+id/input_text_view_2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:orientation="horizontal"
        android:weightSum="120"
        android:layout_margin="5dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/num_button_select"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/num_button_0"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/num_button_select"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/num_button_1"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/num_button_select"
            android:text="2"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/num_button_2"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/num_button_select"
            android:text="3"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/num_button_3"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/num_button_select"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/num_button_4"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/backspace_button"
            android:src="@drawable/ic_baseline_backspace_24"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="11"
        android:orientation="horizontal"
        android:weightSum="120">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/num_button_select"
            android:text="5"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/num_button_5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/num_button_select"
            android:text="6"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/num_button_6"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/num_button_select"
            android:text="7"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/num_button_7"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/num_button_select"
            android:text="8"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/num_button_8"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/num_button_select"
            android:text="9"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/num_button_9"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/hit_button"
            android:src="@drawable/hits"
            android:scaleType="centerInside"
            />
    </LinearLayout>
</LinearLayout>

